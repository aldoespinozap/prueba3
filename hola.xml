<context>
  <input pattern="(hola|buenas) *">
    <output value="Hola $UserName!" if="full($UserName)"/>

    <context if="empty($UserName)">
      <output value="Hola, ¿cual es su nombre?"/>

      <input pattern="$Text">
        <var name="UserName" value="$Text" scope="user"/>
        <output value="Mucho gusto en conocerlo $UserName!"/>
      </input>

    </context>
    <context>
        <output value="¿Cómo podemos ayudarle?, ¿Qué tipo de personal busca?"/>
        <pattern name="Personal" value="entity://Personal"/>
        <sample>
           <item>Personal para apoyo en casa</item>
           <item>Nana</item>
        </sample>
        <input pattern="* $Personal *"/>          
        <output value="De acuerdo"/>
    </context>
   </input>
   

</context>
